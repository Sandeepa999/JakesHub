@model JakesHub.Web.Models.ViewModel.AddJokeRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Jokes And Answer</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Joke</label>
            <input type="text" class="form-control" id="joke" asp-for="JokeQuestion" />
        </div>

        <div mb="3">
            <label class="form-label" >Answer</label>
            <input type="text" class="form-control" id="asnwer" asp-for="JokeAnswer" />
        </div>
        <br />
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
