@model JakesHub.Web.Models.ViewModel.EditJokeRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Jokes And Answer</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post">

        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" id="id" asp-for="Id" readonly />
        </div>

        <div class="mb-3">
            <label class="form-label">Joke</label>
            <input type="text" class="form-control" id="joke" asp-for="JokeQuestion" />
        </div>

        <div mb="3">
            <label class="form-label">Answer</label>
            <input type="text" class="form-control" id="asnwer" asp-for="JokeAnswer" />
        </div>
        <br />
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Update</button>
            <button type="submit" class="btn btn-danger" asp-area="" asp-controller="Jokes" asp-action="Delete">Delete</button>
        </div>
    </form>
</div>